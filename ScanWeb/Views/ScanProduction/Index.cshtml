<div class="page-container">
    <!-- BEGIN PAGE -->
    <div class="page-content">
        <div class="container-fluid">
            <!-- BEGIN PAGE CONTENT-->
            <div class="row-fluid">
                <div class="span12">
                    <!-- BEGIN SAMPLE FORM PORTLET-->
                    <div class="portlet box blue">
                        <div class="portlet-body form" style="padding: 0px !important;">
                            <!-- BEGIN FORM-->
                            <div class="form-horizontal">
                                <div class="form-actions" style="margin-bottom: 0px !important;padding-bottom: 2px !important;padding-top: 2px !important;">
                                    <label class="tablelabel">@(ViewBag.Table != null ?  ViewBag.Table.ToString().ToUpper() : "")</label>
                                </div>
                                <div class="form-actions" style="margin-top: 0px !important;padding-top: 2px !important;">
                                    <input type="hidden" name="RESACODE" id="RESACODE" value="@ViewBag.Resacode" />
                                    <label class="resalabel">@ViewBag.Resacode</label>
                                </div>
                                <div class="control-group" style="display:none;">
                                    <label class="control-label">Video source:</label>
                                    <div class="controls">
                                        <select id="videoSource" class="span6"></select>
                                    </div>
                                </div>
                                <div class="control-group" id="showcam" style="height:310px;display:none;">
                                    <img onclick="ChangeCamera()" src="~/Content/switchcamera.png" style="height:30px;float:right;" class="col-md-1" />
                                    <label class="control-label">
                                        <video style="width:100%;height: 310px;float: left;" muted autoplay id="video" playsinline="true"></video>
                                    </label>
                                    <div class="controls">
                                        <canvas id="mobileCanvas" width="640" height="100" style="display: none;"></canvas>
                                    </div>
                                </div>
                                <div style="clear:both;"></div>
                                <div class="form-actions" style="padding-top: 0px !important;">
                                    <div class="col-md-12 textcenter">
                                        <button onclick="scanBarcode(1,this)" type="button" class="scan btn blue first">QUÉT</button>
                                        <button onclick="scanBarcode(2, this)" type="button" class="scan btn blue first">QUÉT SỐ ĐẦU</button>
                                        <button onclick="CloseResa()" type="button" class="scan btn blue">ĐÓNG RESA</button>
                                    </div>
                                </div>
                            </div>
                            <!-- END FORM-->
                        </div>
                    </div>
                    <!-- END SAMPLE FORM PORTLET-->
                </div>
            </div>

            <!-- END PAGE CONTENT-->
        </div>
        <!-- END PAGE -->
    </div>
</div>

