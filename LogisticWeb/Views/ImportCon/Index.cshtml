@{
    ViewBag.Title = "LamipelVN | Import Contract List";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var User = LogisticWeb.Common.LoginUser.Current;
}
<div class="page-container">

    <!-- BEGIN SIDEBAR -->

    @Html.Action("MenuSiteBar", "Common")

    <!-- END SIDEBAR -->
    <!-- BEGIN PAGE -->
    <div class="page-content">
        <!-- BEGIN PAGE CONTAINER-->
        <div class="container-fluid">
            <!-- BEGIN PAGE HEADER-->
            <div class="row-fluid">
                <div class="span12">
                    <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                    <ul class="breadcrumb sitemap"></ul>
                    @*<ul class="breadcrumb">
                            <li>
                                <i class="icon-home"></i>
                                <a href="/">Home</a>
                                <i class="icon-angle-right"></i>
                            </li>
                            <li>
                                <a href="javascript:void(0)">Pallet</a>
                                <i class="icon-angle-right"></i>
                            </li>
                        </ul>*@
                    <!-- END PAGE TITLE & BREADCRUMB-->
                </div>
            </div>
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row-fluid">
                <div class="span12">
                    <div class="portlet box light-grey">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-globe"></i>Import Contract List</div>
                            @*<div class="tools">
                                    <a href="javascript:;" class="collapse"></a>
                                    <a href="#portlet-config" data-toggle="modal" class="config"></a>
                                    <a href="javascript:;" class="reload"></a>
                                </div>*@
                        </div>
                        <div class="portlet-body tablejs">
                            <div class="table-toolbar">
                                <div class="btn-group">
                                    <button id="sample_editable_1_new" url="/importcon/createnew" onclick="GotoUrl(this)" class="btn green">
                                        Create New Import Contract <i class="icon-plus"></i>
                                    </button>
                                </div>
                                <div class="btn-group pull-right">
                                    <button class="btn dropdown-toggle" data-toggle="dropdown">
                                        Tools <i class="icon-angle-down"></i>
                                    </button>
                                    <ul class="dropdown-menu pull-right">
                                        <li><a onclick="ExportSearch()" href="javascript:void(0)">Export Excel</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="row-fluid">
                                <div class="span12">
                                    <div class="customdatatable_filter dataTables_filter" realateid="tbList">
                                        <label style="float:left;">
                                            Search:<input id="freetext" name="freetext" data-compare="IMPORTCODE" type="text" class="m-wrap medium" placeholder="freetext" />
                                        </label>
                                        <select id="SUPPLIERID" name="SUPPLIERID" data-value="ID" data-name="SUPPLIERNAME" ajaxurl="/supplier/getlist" class="customselect" loadallsuboption="true">
                                            <option value="">--All Supplier--</option>
                                        </select>
                                        <select id="ISDONE" name="ISDONE" class="" data-fullquery="true" data-checkisnull="false">
                                            <option value="">--All Status--</option>
                                            <option value=" ISDONE = 0 ">Pending</option>
                                            <option selected value=" ISDONE = 1 ">Process</option>
                                            <option value=" ISDONE = 2 ">Done</option>
                                        </select>
                                        <input type="button" class="btn btn-search btn-success" value="Search" />
                                    </div>
                                </div>
                            </div>
                            <div class="row-fluid row-fluid-auto">
                                <table actioncolwidth="170" formatsubstr=";;;;;;;;;;" colwidth="70;100;100;160;40;40;;;;;;;" ordertable="true" pageindex="@(ViewBag.PageIndex != null ? ViewBag.PageIndex : "1" )" control="importcon" idCol="IDCONTRACT" urlquery="/importcon/getlistview" class='table table-striped table-bordered table-hover customdatatable' headerCol="Import Code,Supplier,Shipper,Material,Origin,Price,Order qty (Cnts),Received qty (Cnts),Arrival qty (Cnts),On the way qty (Cnts),Planned qty (Cnts), Need to Rev qty (Cnts),Pending qty (Cnts)" id='tbList' arrCol="IMPORTCODE,SUPPLIERNAME,SHIPPERNAME,MATERIALFULLNAME,ORIGIN,PRICE,QUANTITYCNT,RECEIVEDCNT,ARRIVALCNT,ONTHEWAYCNT,PLANNEDCNT,NEEDTOBEREVIMP,PENDINGCNT" exportCol="IMPORTCODE,SUPPLIERNAME,SHIPPERNAME,MATERIALFULLNAME,ORIGIN,PRICE,QUANTITYCNT,RECEIVEDCNT,ARRIVALCNT,ONTHEWAYCNT,PLANNEDCNT,NEEDTOBEREVIMP,PENDINGCNT" @(User != null && User.ISADMIN ? "data-admin=true" : "") replaceEdit="true"></table>
                            </div>

                            @*<div class="row-fluid row-fluid-auto">
                                    <table actioncolwidth="170" formatsubstr=";;;;;;;;;;" colwidth=";;;;;;;;;;;" ordertable="true" pageindex="@(ViewBag.PageIndex != null ? ViewBag.PageIndex : "1" )" control="importcon" idCol="ID" urlquery="/importcon/getlist" class='table table-striped table-bordered table-hover customdatatable' headerCol="ID,IMPORTCODE,SUPPLIERID,IMPORTCONTRACTDATE,ORIGIN,TERM,POL,REMARK,CREATEDDATE,CREATEDUSER,UPDATEDDATE,UPDATEDUSER" id='tbList' arrCol="ID,IMPORTCODE,SUPPLIERID,IMPORTCONTRACTDATE,ORIGIN,TERM,POL,REMARK,CREATEDDATE,CREATEDUSER,UPDATEDDATE,UPDATEDUSER" exportCol="ID,IMPORTCODE,SUPPLIERID,IMPORTCONTRACTDATE,ORIGIN,TERM,POL,REMARK,CREATEDDATE,CREATEDUSER,UPDATEDDATE,UPDATEDUSER" @(User != null && User.ISADMIN ? "data-admin=true" : "")></table>
                                </div>*@
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
        <!-- END PAGE CONTAINER-->
    </div>
    <!-- END PAGE -->
</div>

