@{
    ViewBag.Title = "LamipelVN | Import Contract";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">

    <!-- BEGIN SIDEBAR -->

    @Html.Action("MenuSiteBar", "Common")

    <!-- END SIDEBAR -->
    <!-- BEGIN PAGE -->
    <div class="page-content">
        <div class="container-fluid">
            <!-- BEGIN PAGE HEADER-->
            <div class="row-fluid">
                <div class="span12">
                    <h3 class="page-title">
                        New Import Contract
                        <small></small>
                    </h3>
                    <ul class="breadcrumb sitemap"></ul>
                </div>
            </div>
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row-fluid">
                <div class="span12">
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i>Detail Import Contract</div>
                            <div class="tools">
                                <a href="javascript:;" class="collapse"></a>
                            </div>
                        </div>
                        <div id="detail" class="portlet-body form">
                            <input hidden name="ID" />
                            <input hidden name="ITEMLISTID" />
                            <!-- BEGIN FORM-->
                            <div class="form-horizontal">
                                <div class="control-group">
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Contract No.:</label>
                                        <div class="controls">
                                            <input name="IMPORTCODE" autocomplete="off" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Contract Date:</label>
                                        <div class="controls">
                                            <input readonly name="IMPORTCONTRACTDATE" autocomplete="off" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Container Type:</label>
                                        <div class="controls">
                                            <select onchange="ChangeUnitCNT()" class="span6" name="CONTAINERTYPE">
                                                <option value="20DC">20'DC</option>
                                                <option value="40DC">40'DC</option>
                                                <option value="40HC">40'HC</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">TERM:</label>
                                        <div class="controls">
                                            <input name="TERM" autocomplete="on" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">POL:</label>
                                        <div class="controls">
                                            <input name="POL" autocomplete="on" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Remark:</label>
                                        <div class="controls">
                                            <input name="REMARK" autocomplete="on" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption" style="min-width: 104px;"><i class="icon-reorder"></i>Supplier</div>
                            <div class="filter-on-title">
                                <select name="listsupplier" onchange="LoadDetailSupplier(this)" class="span12"></select>
                            </div>
                            <div class="action-on-title">
                                <div class="btn-group">
                                    <button id="formsupplier" onclick="FormAddNewSupplier(this)" class="btn green">
                                        Add New Supplier <i class="icon-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="tools">
                                <a href="javascript:;" class="collapse"></a>
                            </div>
                        </div>
                        <div id="supplier" class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <div class="form-horizontal">
                                <input type="hidden" name="SUPPLIERID" />
                                <div class="control-group">
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Supplier Name:</label>
                                        <div class="controls">
                                            <input name="SUPPLIERNAME" autocomplete="off" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">PIC:</label>
                                        <div class="controls">
                                            <input name="SUPPLIERPRIMARY" autocomplete="off" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Address:</label>
                                        <div class="controls">
                                            <textarea style="resize: none;" name="SUPPLIERADDR" class="span6 m-wrap" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Tel:</label>
                                        <div class="controls">
                                            <input name="SUPPLIERTEL" autocomplete="off" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Email:</label>
                                        <div class="controls">
                                            <input name="SUPPLIERFAX" autocomplete="off" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Note:</label>
                                        <div class="controls">
                                            <textarea style="resize: none;" name="SUPPLIERNOTE" class="span6 m-wrap" rows="3"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END FORM-->
                        </div>

                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption" style="min-width: 104px;"><i class="icon-reorder"></i>Shipper</div>
                            <div class="filter-on-title">
                                <select name="listshipper" onchange="LoadDetailShipper(this)" class="span12"></select>
                            </div>
                            <div class="action-on-title">
                                <div class="btn-group">
                                    <button id="formshipper" onclick="FormAddNewShipper(this)" class="btn green">
                                        Add New Shipper <i class="icon-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="tools">
                                <a href="javascript:;" class="collapse"></a>
                            </div>
                        </div>
                        <div id="shipper" class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <div class="form-horizontal">
                                <input type="hidden" name="SHIPPERID" />
                                <div class="control-group">
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Shipper Name:</label>
                                        <div class="controls">
                                            <input name="SHIPPERNAME" autocomplete="off" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">PIC:</label>
                                        <div class="controls">
                                            <input name="SHIPPERPRIMARY" autocomplete="off" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Address:</label>
                                        <div class="controls">
                                            <textarea style="resize: none;" name="SHIPPERADDR" class="span6 m-wrap" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Tel:</label>
                                        <div class="controls">
                                            <input name="SHIPPERTEL" autocomplete="off" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Email:</label>
                                        <div class="controls">
                                            <input name="SHIPPERFAX" autocomplete="off" type="text" class="span6 m-wrap" />
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <div class="controls-left-50 nosize">
                                        <label class="control-label">Note:</label>
                                        <div class="controls">
                                            <textarea style="resize: none;" name="SHIPPERNOTE" class="span6 m-wrap" rows="3"></textarea>
                                        </div>
                                    </div>

                                </div>

                            </div>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-reorder"></i>Import Item contract list</div>
                            <div class="action-on-title">
                                <div class="btn-group">
                                    <button onclick="AddNewItemForm()" class="btn green">
                                        Add Item <i class="icon-plus"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="tools">
                                <a href="javascript:;" class="collapse"></a>
                            </div>
                        </div>
                        <div id="itemlist" class="portlet-body form">

                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="portlet box blue no-border">
                        <div class="portlet-body form">
                            <div class="form-actions no-border">
                                <button type="button" onclick="SaveImportContract()" class="btn blue" style="width: 200px;">Save<br />Lưu</button>
                                <button type="button" style="width: 92px;" class="btn" onclick="location.href = '/importcon'">Cancel<br />Hủy</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>
        <!-- END PAGE -->
    </div>
</div>

